{% extends 'layout.html.twig' %}
{% block title %}Bem vindo ao Syph{% endblock %}
{% block body %}
    <div class="loader-wrapper">
        <div id="loader-image"></div>
    </div>
    <!-- **Wrapper** -->
    <div class="wrapper">
        <div class="inner-wrapper">

            <!-- **Main - Starts** -->
            <div id="main">
                <div class="blank-template-container">
                    <div class="blank-template">
                        <div class="blank-template-wrapper">
                            <div class="container">
                                <!-- Primary Starts -->
                                <section id="primary" class="content-full-width">
                                    <div class="row">
                                        <div class="col-md-6 col-md-offset-3 text-center">
                                        {#<img src="{{ asset('/assets/images/logo.png') }}" style="width: 200px; margin: 0 41%;">#}
                                            <h1 class="aligncenter">Página teste de passagem de parâmetros</h1><br>
                                            <p class="aligncenter">Altere a URL no padrão:</p>
                                            <code>/test/{nome}/{id}</code>
                                            <p> e confira a passagem de parâmetros pela URL</p>
                                            <p class="aligncenter"><b>Parâmetros passados:</b> name: {{ name }}, id: {{ id }}</p>
                                        </div>
                                        <div class="col-md-6 col-md-offset-3 text-center">
                                            <hr>
                                            <form method="post" action="/test/post" class="form">
                                                <h5>Teste de requisição POST</h5>
                                                <label for="nome">Digite seu nome</label>
                                                <input type="text" id="nome" name="nome"/>
                                                <button type="submit" class="btn btn-primary">Enviar</button>
                                            </form>
                                        </div>
                                        <div class="col-md-6 col-md-offset-3 text-center">
                                            <hr>
                                            {% for user in users %}
                                                <p>{{ user.id }} - {{ user.nome }} - {{ user.email }}</p>
                                            {% endfor %}
                                        </div>

                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- **Main - Ends** -->

        </div><!-- **inner-wrapper - End** -->

    </div><!-- **Wrapper - End** -->
{% endblock %}
